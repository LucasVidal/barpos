<p id="notice"><%= notice %></p>

<h1>Listing Payment Audits</h1>

<table>
  <thead>
    <tr>
      <th>Payment</th>
      <th>Amount from</th>
      <th>Amount to</th>
      <th>Payment type from</th>
      <th>Payment type to</th>
      <th>Datetime</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_audits.each do |payment_audit| %>
      <tr>
        <td><%= payment_audit.payment %></td>
        <td><%= payment_audit.amount_from %></td>
        <td><%= payment_audit.amount_to %></td>
        <td><%= payment_audit.payment_type_from %></td>
        <td><%= payment_audit.payment_type_to %></td>
        <td><%= payment_audit.datetime %></td>
        <td><%= link_to 'Show', payment_audit %></td>
        <td><%= link_to 'Edit', edit_payment_audit_path(payment_audit) %></td>
        <td><%= link_to 'Destroy', payment_audit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

