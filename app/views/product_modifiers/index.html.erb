<p id="notice"><%= notice %></p>

<h1>Listing Product Modifiers</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Modifier</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_modifiers.each do |product_modifier| %>
      <tr>
        <td><%= product_modifier.product %></td>
        <td><%= product_modifier.modifier %></td>
        <td><%= link_to 'Show', product_modifier %></td>
        <td><%= link_to 'Edit', edit_product_modifier_path(product_modifier) %></td>
        <td><%= link_to 'Destroy', product_modifier, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

